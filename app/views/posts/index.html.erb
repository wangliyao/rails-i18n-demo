<p id="notice"><%= notice %></p>

<h1><%= t("posts.post") %></h1>

<table>
  <thead>
    <tr>
      <th>ID<th>
      <th><%= t("posts.title")%> <th>
      <th><%= t("posts.content")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to t(:show), post %></td>
        <td><%= link_to t(:edit), edit_post_path(post) %></td>
        <td><%= link_to t(:destroy), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new), new_post_path %>
